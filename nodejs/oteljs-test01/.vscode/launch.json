    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via npm",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "rolldice"
            ],
            "runtimeExecutable": "npm",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/node_modules/@opentelemetry/api/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/auto-instrumentations-node/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/instrumentation/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/instrumentation-aws-lambda/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/resources/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-logs/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-metrics/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-node/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-trace-base/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-trace-node/**/*.js"
            ],
            "sourceMapPathOverrides": {
                // "../../src/sdk.ts": "../../../opentelemetry-js/experimental/packages/opentelemetry-sdk-node/src/sdk.ts",
                // "../../../src/export/ConsoleSpanExporter.ts": "../opentelemetry-js/packages/opentelemetry-sdk-trace-base/src/export/ConsoleSpanExporter.ts"
            },
            "skipFiles": [
                "node_modules/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node a file",
            "smartStep": true,
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/node_modules/@opentelemetry/auto-instrumentations-node/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/instrumentation/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/resources/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-logs/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-node/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-trace-base/**/*.js",
                "${workspaceFolder}/node_modules/@opentelemetry/sdk-trace-node/**/*.js"
            ],
            "sourceMapPathOverrides": {
                // "../../src/sdk.ts": "../../../opentelemetry-js/experimental/packages/opentelemetry-sdk-node/src/sdk.ts",
                // "../../../src/export/ConsoleSpanExporter.ts": "../opentelemetry-js/packages/opentelemetry-sdk-trace-base/src/export/ConsoleSpanExporter.ts"
            },
            "skipFiles": [
                "node_modules/**"
            ],
            "program": "${workspaceFolder}/rolldice.js"
        }
    ]
}